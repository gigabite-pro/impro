<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <!-- Font -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Lexend+Deca&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="https://i.imgur.com/W0fE4FL.png" type="image/x-icon">
    <title>Impro | Edit Profile</title>
    <style>
      body{
        background-color: rgb(31, 30, 30);
        font-family: 'Lexend Deca', sans-serif;
      }
      .container{
        margin-top: 7rem;
      }
      h1{
        color: white;
        font-weight: bold;
        font-size: 4rem;
      }
      .uploadbtn{
        width: 8rem;
      }
      .logoutbtn{
        margin-left: 0.5rem;
      }
      .form-label{
        color: white;
      }
      h2{
        color: white;
      }
      footer{
            position: relative;
            top: 3rem;
            width: 100%;
            text-align: center;
            color: white;
            font-family: 'Lexend Deca', sans-serif;
            font-size: 1.5rem;
        }
        a{
            text-decoration: none;
            color: white;
        }
        footer a:hover{
            color: gray;
        }
        @media (max-width: 576px){
          .container{
            margin-top: 2rem;
          }
        }
    </style>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center mb-4">
      <div class="col-12 text-center">
        <a href="/"><h1>Impro</h1></a>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-4">
        <%- include('./partials/messages') %>
        <form action="/edit-info" method="POST" enctype="multipart/form-data" class="form hide">

          <input type="text" 
            class="form-control mb-3" 
            id="name" 
            name="name" 
            placeholder="Full Name" 
            value="<%= typeof name != 'undefined' ? name : '' %>"
            >

          <input type="text" 
            rows="2" 
            class="form-control mb-3" 
            id="bio" 
            placeholder="Bio" 
            name="bio"
            value = "<%= typeof bio != 'undefined' ? bio : '' %>"
            ></input>

          <input type="text" 
            class="form-control mb-2" 
            id="backlink" 
            name="backlink" 
            placeholder="Backlink (impro.gq/{backlink})"
            value="<%= typeof backlink != 'undefined' ? backlink : '' %>"
            >
            <label for="backlink" class="form-label mb-2">Backlink cannot contain ' / '</label>

          <input type="password" 
          name="password" 
          id="password"
          class="form-control mb-2"
          placeholder="New Password"
          >

          <div class="mb-1">
            <label for="pfp" class="form-label">Profile Picture (Make sure the image is squared)</label>
            <input type="file" id='pfp' name='files' class="form-control mb-3">
          </div>
          <div class="button">
            <a href="/edit-images">
              <button type="button" class="btn-light btn">Edit Images</button>
            </a>
            <a href="/logout">
              <button type="button" class="logoutbtn btn btn-light">Logout</button>
            </a>
          </div>
          <div class="button mt-3 text-center">
            <button type="submit" class="savebtn btn btn-light">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-12 text-center">
        <h2 class="loading" style="display: none;">Updating..</h2> 
      </div>
    </div>
  </div>
  <footer>
    Made by <a href="https://github.com/gigabite-pro/impro" target="_blank">Vaibhav</a>
  </footer>
</body>
<!-- Bootstap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
<script>
  var btn = document.querySelector('.savebtn')
  btn.addEventListener('click', ()=>{
    var form = document.querySelector('.hide')
    var load = document.querySelector('.loading')
    form.style.display = 'none'
    load.style.display = 'block'
  });
</script>
</html>